<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/gradient1">

    <TextView
        android:id="@+id/oneOOneHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/bad_script"
        android:text="Referendum 101!"
        android:textColor="@color/primary_text"
        android:textSize="40sp" />

    <TextView
        android:text="Consult Chapter 16: Amendment of the Constitution"
        android:id="@+id/refWebsiteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oneOOneHeader"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorAccent"
        android:drawableRight="@drawable/ic_exit_to_app_white_24dp"
        android:drawablePadding="4dp"
        android:background="@color/primary_light"
        android:gravity="center_vertical"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/refWebsiteTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        />


</RelativeLayout>