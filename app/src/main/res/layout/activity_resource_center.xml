<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ResourceCenterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:src="@drawable/sho_hatakeyama_landscape" />

    <TextView
        android:id="@+id/rcHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/bad_script"
        android:text="Resource Centers"
        android:textColor="@color/primary_text"
        android:textSize="40sp" />

    <TextView
        android:text="Find a Resource Center Near you"
        android:id="@+id/rcSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rcHeader"
        android:fontFamily="@font/bad_script"
        android:textColor="@color/primary_text"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/resourceSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rcSubHeader"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resourceSpinner"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>